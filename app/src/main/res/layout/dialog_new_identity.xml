<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <im.delight.android.identicons.SymmetricIdenticon
        android:id="@+id/dialog_new_identity_identicon"
        android:layout_width="@dimen/identicon_size"
        android:layout_height="@dimen/identicon_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dialog_new_identity_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_new_identity_identicon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:text="@string/dialog_new_identity_name_label" />

    <EditText
        android:id="@+id/dialog_new_identity_identity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_new_identity_name_label"
        android:autofillHints="personName"
        android:hint="@string/dialog_new_identity_identity_name"
        android:inputType="textPersonName" />

</RelativeLayout>
